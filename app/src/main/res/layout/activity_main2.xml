<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/htmltext"
        android:layout_width="wrap_content"
        android:text="这是测试"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/my_dianzan"
        app:layout_constraintTop_toBottomOf="@+id/htmltext"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        />



    <com.jaren.lib.view.LikeView
        android:id="@+id/lv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_dianzan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:ringColor="#ff44ff00"
        app:defaultColor="#ffcccccc"
        app:checkedLikeIconRes="@drawable/yixihuan_2"
        app:defaultLikeIconRes="@drawable/xihuan_bai"
        app:cirRadius="14dp"
        app:cycleTime="2000"/>


</android.support.constraint.ConstraintLayout>